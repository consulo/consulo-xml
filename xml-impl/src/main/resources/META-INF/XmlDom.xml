<consulo-plugin>
	<actions>
		<action id="DomElementsTreeView.GotoDomElementDeclarationAction"
				class="consulo.xml.util.xml.tree.actions.GotoDomElementDeclarationAction"
				text="Goto Element"
				use-shortcut-of="EditSource"/>

		<action id="DomElementsTreeView.AddElement" class="consulo.xml.util.xml.tree.actions.AddElementInCollectionAction"
				text="Insert element">
			<keyboard-shortcut first-keystroke="INSERT" keymap="$default"/>
		</action>
		<action id="DomElementsTreeView.DeleteElement" class="consulo.xml.util.xml.tree.actions.DeleteDomElement"
				text="Delete element" use-shortcut-of="$Delete"/>

		<group id="DomElementsTreeView.AddElementGroup" class="consulo.xml.util.xml.tree.actions.AddDomElementActionGroup"/>

		<group id="DomElementsTreeView.TreePopup">
			<reference ref="DomElementsTreeView.GotoDomElementDeclarationAction"/>

			<separator/>
			<reference ref="DomElementsTreeView.AddElementGroup"/>
			<reference ref="DomElementsTreeView.DeleteElement"/>
		</group>

		<group id="DomCollectionControl">
			<action id="DomCollectionControl.Add" class="consulo.xml.util.xml.ui.DomCollectionControl$AddAction" text="Add">
				<keyboard-shortcut first-keystroke="INSERT" keymap="$default"/>
			</action>
			<action id="DomCollectionControl.Edit" class="consulo.xml.util.xml.ui.DomCollectionControl$EditAction" text="Edit" use-shortcut-of="EditSource"/>
			<action id="DomCollectionControl.Remove" class="consulo.xml.util.xml.ui.DomCollectionControl$RemoveAction" text="Remove" use-shortcut-of="$Delete"/>
		</group>
	</actions>
	<extensionPoints>
		<extensionPoint name="dom.fileDescription"
						interface="consulo.xml.util.xml.DomFileDescription"/>

		<extensionPoint name="dom.implementation"
						beanClass="consulo.xml.util.xml.impl.DomImplementationClassEP"/>

		<extensionPoint name="dom.converter"
						beanClass="consulo.xml.util.xml.impl.DomImplementationClassEP"/>

		<extensionPoint name="dom.extender"
						beanClass="consulo.xml.util.xml.reflect.DomExtenderEP">
			<with attribute="myDomClass" implements="consulo.xml.util.xml.reflect.DomExtender"/>
		</extensionPoint>

		<extensionPoint name="dom.customAnnotationChecker"
						interface="consulo.xml.util.xml.highlighting.DomCustomAnnotationChecker"/>

		<extensionPoint name="dom.uiControlsProvider"
						interface="consulo.ide.impl.idea.util.Consumer"/>

		<extensionPoint name="dom.moduleContextProvider" interface="consulo.xml.util.xml.ModuleContextProvider"/>
	</extensionPoints>

	<extensions defaultExtensionNs="consulo">

		<stubElementTypeHolder class="consulo.xml.util.xml.stubs.DomElementTypeHolder"/>


		<applicationService serviceInterface="consulo.xml.util.xml.ElementPresentationManager"
							serviceImplementation="consulo.xml.util.xml.ElementPresentationManagerImpl"/>

		<applicationService serviceInterface="consulo.xml.util.xml.ConverterManager"
							serviceImplementation="consulo.xml.util.xml.impl.ConverterManagerImpl"/>

		<projectService serviceInterface="consulo.xml.util.xml.ui.CommittableUtil"
						serviceImplementation="consulo.xml.util.xml.ui.CommittableUtil"/>

		<projectService serviceInterface="consulo.xml.util.xml.highlighting.DomElementAnnotationsManager"
						serviceImplementation="consulo.xml.util.xml.highlighting.DomElementAnnotationsManagerImpl"/>

		<projectService serviceInterface="consulo.xml.util.xml.DomElementsNavigationManager"
						serviceImplementation="consulo.xml.util.xml.impl.DomElementsNavigationManagerImpl"/>


		<annotator language="XML" implementationClass="consulo.xml.util.xml.impl.DefaultDomAnnotator"/>
		<lang.documentationProvider language="XML" implementationClass="consulo.xml.util.xml.DomDocumentationProvider" id="dom"/>


		<patterns.patternClass className="consulo.xml.patterns.DomPatterns" alias="dom"/>
	</extensions>

</consulo-plugin>
