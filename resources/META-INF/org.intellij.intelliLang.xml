<?xml version="1.0" encoding="utf-8"?>

<idea-plugin version="2">

  <extensions defaultExtensionNs="com.intellij">
    <multiHostInjector forClass="com.intellij.psi.xml.XmlTag" implementationClass="org.intellij.plugins.intelliLang.inject.xml.XmlLanguageInjector"/>
    <multiHostInjector forClass="com.intellij.psi.xml.XmlAttributeValue" implementationClass="org.intellij.plugins.intelliLang.inject.xml.XmlLanguageInjector"/>
  </extensions>

  <extensions defaultExtensionNs="org.intellij.intelliLang">
    <languageSupport implementation="org.intellij.plugins.intelliLang.inject.xml.XmlLanguageInjectionSupport"/>
    <injectionConfig config="resources/xmlInjections-html.xml"/>
  </extensions>

</idea-plugin>